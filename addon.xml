<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.sample_sports"
       name="Sample Sports Videos"
       version="1.0.0"
       provider-name="YourName">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <!-- THIS EXTENSION POINT IS REQUIRED -->
    <extension point="xbmc.python.pluginsource" library="main.py" provides="video"/>
    <extension point="xbmc.addon.metadata">
        <summary>Test add-on for Soccer, Cricket, Rugby categories with sample videos</summary>
        <description>
            Kodi video add-on with three categories: Soccer, Cricket, and Rugby.
            Each uses sample-videos.com for public domain test video streams.
        </description>
        <platform>all</platform>
        <license>MIT</license>
    </extension>
</addon>
