       version="1.0.0"
       name="Addie Streams"
       provider-name="Ubuntucore.co.za">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py" icon="icon.png">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">South African TV Channels</summary>
        <description lang="en_GB">Free and public South African TV channels</description>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
