<addons>
    <addon id="plugin.video.addielive"
           version="1.0.0"
           name="Addie Streams"
           provider-name="Ubuntucore.co.za">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
        </requires>
        <extension point="xbmc.python.pluginsource" library="main.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">South African TV Channels</summary>
            <description lang="en_GB">Free and public South African TV channels</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>

    <addon id="repository.zarepo"
           name="Addie Streams"
           version="1.0.0"
           provider-name="Addie">
        <extension point="xbmc.addon.repository"
                   name="Addie Streams"
                   info="https://raw.githubusercontent.com/adenaan/stream/main/addons.xml"
                   checksum="https://raw.githubusercontent.com/adenaan/stream/main/addons.xml.md5"
                   datadir="https://raw.githubusercontent.com/adenaan/stream/main/zips/" />
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">ZA Kodi Add-ons Repository</summary>
            <description lang="en_GB">Repository for South Africa Kodi add-ons.</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
</addons>
